<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jeremyfryd.housemates.ui.CreateAccountActivity"
    android:background="@color/colorAccent"
    android:padding="30dp">


    <Button
        android:id="@+id/createHouseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Add House"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="122dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New House"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/addNewHouseHeader" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="House Name"
        android:inputType="text"
        android:nextFocusDown="@+id/passwordEditText"
        android:padding="10dp"
        android:layout_marginBottom="74dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_above="@+id/useLocationButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/useLocationButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:nextFocusDown="@+id/passwordEditText"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:text="Use Current Location"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginLeft="6dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longitudeTextView"
        android:layout_alignBottom="@+id/useLocationButton"
        android:layout_alignStart="@+id/latitudeTextView" />

    <TextView
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/latitudeTextView"
        android:layout_marginStart="39dp"
        android:layout_below="@+id/nameEditText"
        android:layout_toEndOf="@+id/useLocationButton" />

</RelativeLayout>